{
  "name": "@umar/context-pack",
  "version": "0.1.0",
  "description": "Optimal context window builder for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "context-pack": "dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/",
    "format": "biome format --write src/ tests/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "context",
    "ai",
    "llm",
    "agent",
    "codebase",
    "token",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/umxr/context-pack"
  },
  "homepage": "https://github.com/umxr/context-pack#readme",
  "author": "umxr <umarg1997@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^25.2.3",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "fast-glob": "^3.3.0",
    "js-tiktoken": "^1.0.0"
  }
}
